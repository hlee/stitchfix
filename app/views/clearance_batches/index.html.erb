<h2>Clearance Batches</h2>

<%= form_tag(clearance_batches_path(kind: "file"), multipart: true, class: 'form-inline', role: 'form') do %>
  <div class="form-group">
    <%= label_tag 'barcodes', 'Select batch file' %>
    <%= file_field_tag 'barcodes', class: 'form-control' %>
  </div>
  <%= button_tag 'upload batch file', class: 'btn btn-primary' %>
<% end %>

<%= form_tag(clearance_batches_path(kind: "barcodes"), method: :post, class: 'form-inline', role: 'form') do %>
  <div class="form-group">
    <%= text_area_tag 'barcodes' %>
  </div>
  <%= button_tag 'upload', class: 'btn btn-primary' %>
<% end %>

<table class="table table-striped clearance_batches">
  <thead>
    <tr>
      <th></th>
      <th>Date clearanced</th>
      <th>Number of items clearanced</th>
    </tr>
  </thead>
  <tbody>
    <%- @clearance_batches.each do |clearance_batch| -%>
      <tr>
        <td>Clearance Batch <%= clearance_batch.id %></td>
        <td><%= l(clearance_batch.created_at, format: :short) %></td>
        <td><%= link_to clearance_batch.items.count, clearance_batch %></td>
      </tr>
    <%- end -%>
  </tbody>
</table>
